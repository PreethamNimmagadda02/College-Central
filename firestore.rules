rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Campus Locations - read-only for all authenticated users, admin can write
    match /campusLocations/{locationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Allow any authenticated user to initialize data
    }

    // Quick Routes - read-only for all authenticated users, admin can write
    match /quickRoutes/{routeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Allow any authenticated user to initialize data
    }

    // Events collection - read for all authenticated users
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Announcements collection - read for all authenticated users
    match /announcements/{announcementId} {
      allow read: if request.auth != null;  
      allow write: if request.auth != null;
    }

    // Faculty directory - read for all authenticated users
    match /faculty/{facultyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Student directory - read for all authenticated users
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Academic calendar - read for all authenticated users
    match /academicCalendar/{calendarId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // User forms data - users can only read/write their own data
    match /userForms/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
