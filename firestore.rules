rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Events collection - read for all authenticated users
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Announcements collection - read for all authenticated users
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // News collection - read for all authenticated users
    match /news/{newsId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Faculty directory - read for all authenticated users
    match /faculty/{facultyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Student directory - read for all authenticated users
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Academic calendar - read for all authenticated users
    match /academicCalendar/{calendarId} {
      allow read: if request.auth != null; 
      allow write: if request.auth != null;
    }

    // User forms data - users can only read/write their own data
    match /userForms/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User events - users can only read/write their own events
    match /userEvents/{eventId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // User reminder preferences - users can only read/write their own preferences
    match /userReminderPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
